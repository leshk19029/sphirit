local EmojiPreloader = {}

-- –û–±—ä—è–≤–ª—è–µ–º —ç–º–æ–¥–∑–∏ –∫–∞–∫ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ (—É–±—Ä–∞–ª–∏ KEY)
EmojiPreloader.TREE = "üå≤"
EmojiPreloader.CHECK = "‚úÖ"
EmojiPreloader.CROSS = "‚ùå"
EmojiPreloader.ROCKET = "üöÄ"
EmojiPreloader.STOP = "‚èπÔ∏è"
EmojiPreloader.RUSSIA = "üá∑üá∫"
EmojiPreloader.USA = "üá∫üá∏"
EmojiPreloader.DISCORD = "üì±" -- –î–æ–±–∞–≤–∏–ª–∏ –¥–∏—Å–∫–æ—Ä–¥ –∏–∫–æ–Ω–∫—É

-- –§—É–Ω–∫—Ü–∏—è –ø—Ä–µ–¥–∑–∞–≥—Ä—É–∑–∫–∏ —ç–º–æ–¥–∑–∏
function EmojiPreloader.preloadEmojis()
    local Players = game:GetService("Players")
    local player = Players.LocalPlayer
    local playerGui = player:WaitForChild("PlayerGui")
    
    print(EmojiPreloader.TREE .. " –ù–∞—á–∏–Ω–∞—é –ø—Ä–µ–¥–∑–∞–≥—Ä—É–∑–∫—É —ç–º–æ–¥–∑–∏...")
    
    -- –°–æ–∑–¥–∞–µ–º –Ω–µ–≤–∏–¥–∏–º—ã–π ScreenGui –¥–ª—è –ø—Ä–µ–¥–∑–∞–≥—Ä—É–∑–∫–∏
    local preloadGui = Instance.new("ScreenGui")
    preloadGui.Name = "EmojiPreloader"
    preloadGui.ResetOnSpawn = false
    preloadGui.DisplayOrder = 9999
    preloadGui.Enabled = false
    preloadGui.Parent = playerGui
    
    -- –ü—Ä–µ–¥–∑–∞–≥—Ä—É–∂–∞–µ–º –≤—Å–µ —ç–º–æ–¥–∑–∏
    local emojis = {
        EmojiPreloader.TREE,
        EmojiPreloader.CHECK,
        EmojiPreloader.CROSS,
        EmojiPreloader.ROCKET,
        EmojiPreloader.STOP,
        EmojiPreloader.RUSSIA,
        EmojiPreloader.USA,
        EmojiPreloader.DISCORD
    }
    
    for _, emoji in ipairs(emojis) do
        local label = Instance.new("TextLabel")
        label.Size = UDim2.new(0, 1, 0, 1)
        label.Position = UDim2.new(0, -100, 0, -100)
        label.BackgroundTransparency = 1
        label.Text = emoji
        label.TextSize = 20
        label.Font = Enum.Font.GothamBold
        label.Visible = false
        label.Parent = preloadGui
    end
    
    -- –£–¥–∞–ª—è–µ–º GUI –ø–æ—Å–ª–µ –∑–∞–≥—Ä—É–∑–∫–∏
    task.delay(0.5, function()
        if preloadGui and preloadGui.Parent then
            preloadGui:Destroy()
            print(EmojiPreloader.CHECK .. " –í—Å–µ —ç–º–æ–¥–∑–∏ —É—Å–ø–µ—à–Ω–æ –ø—Ä–µ–¥–∑–∞–≥—Ä—É–∂–µ–Ω—ã!")
        end
    end)
    
    return true
end

-- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∞—è –ø—Ä–µ–¥–∑–∞–≥—Ä—É–∑–∫–∞
task.spawn(function()
    EmojiPreloader.preloadEmojis()
end)

return EmojiPreloader
