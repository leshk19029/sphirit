BindIndicatorPadding.Parent = BindIndicator

-- –ü–µ—Ä–µ–º–µ–Ω–Ω—ã–µ —Å–æ—Å—Ç–æ—è–Ω–∏—è
local isMenuOpen = false
local isProcessing = false

-- –ê–Ω–∏–º–∞—Ü–∏–∏
local function TweenObject(object, properties, duration)
    local tweenInfo = TweenInfo.new(
        duration or 0.3,
        Enum.EasingStyle.Quad,
        Enum.EasingDirection.Out
    )
    local tween = TweenService:Create(object, tweenInfo, properties)
    tween:Play()
    return tween
end

-- –ü–æ–∫–∞–∑–∞—Ç—å —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
local function ShowNotification(message, isSuccess)
    NotificationLabel.Text = message
    
    if isSuccess then
        NotificationLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
    else
        NotificationLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
    
    NotificationFrame.Visible = true
    
    -- –ê–≤—Ç–æ—Å–∫—Ä—ã—Ç–∏–µ —á–µ—Ä–µ–∑ 3 —Å–µ–∫—É–Ω–¥—ã
    delay(3, function()
        if NotificationFrame then
            NotificationFrame.Visible = false
        end
    end)
end

-- –ê–Ω–∏–º–∞—Ü–∏—è –∑–∞–≥—Ä—É–∑–∫–∏
local function ShowLoading(duration)
    LoadingFrame.Visible = true
    LoadingBar.Size = UDim2.new(0, 0, 1, 0)
    
    TweenObject(LoadingBar, {Size = UDim2.new(1, 0, 1, 0)}, duration or 2)
end

local function HideLoading()
    LoadingFrame.Visible = false
end

-- –û—Ç–∫—Ä—ã—Ç—å –º–µ–Ω—é
local function OpenMenu()
    if isProcessing then return end
    
    isMenuOpen = true
    MainFrame.Visible = true
    MainFrame.BackgroundTransparency = 1
    
    -- –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ—è–≤–ª–µ–Ω–∏—è
    TweenObject(MainFrame, {BackgroundTransparency = 0}, 0.2)
    
    -- –§–æ–∫—É—Å –Ω–∞ –ø–æ–ª–µ –≤–≤–æ–¥–∞
    wait(0.1)
    if TextBox then
        TextBox:CaptureFocus()
    end
    
    if DEBUG_MODE then
        print("üì± –ú–µ–Ω—é –æ—Ç–∫—Ä—ã—Ç–æ –ø–æ –±–∏–Ω–¥—É " .. OPEN_BIND.Name)
    end
end

-- –ó–∞–∫—Ä—ã—Ç—å –º–µ–Ω—é
local function CloseMenu()
    isMenuOpen = false
    
    -- –ê–Ω–∏–º–∞—Ü–∏—è –∏—Å—á–µ–∑–Ω–æ–≤–µ–Ω–∏—è
    TweenObject(MainFrame, {BackgroundTransparency = 1}, 0.2)
    
    wait(0.2)
    if MainFrame then
        MainFrame.Visible = false
        TextBox.Text = ""
        NotificationFrame.Visible = false
        LoadingFrame.Visible = false
    end
    
    if DEBUG_MODE then
        print("üì± –ú–µ–Ω—é –∑–∞–∫—Ä—ã—Ç–æ")
    end
end

-- –û–±—Ä–∞–±–æ—Ç–∫–∞ Job ID
local function ProcessJobID(jobId)
    if isProcessing then return end
    
    isProcessing = true
    ShowLoading(1.5)
    
    -- –í–∞–ª–∏–¥–∞—Ü–∏—è
    jobId = tostring(jobId):gsub("%s+", "")
    
    if jobId == "" then
        ShowNotification("‚ùå –û—à–∏–±–∫–∞: –í–≤–µ–¥–∏—Ç–µ Job ID!", false)
        HideLoading()
        isProcessing = false
        return
    end
    
    -- –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ —Ü–∏—Ñ—Ä—ã
    if not jobId:match("^%d+$") then
        ShowNotification("‚ùå –û—à–∏–±–∫–∞: Job ID –¥–æ–ª–∂–µ–Ω —Å–æ–¥–µ—Ä–∂–∞—Ç—å —Ç–æ–ª—å–∫–æ —Ü–∏—Ñ—Ä—ã!", false)
        HideLoading()
        isProcessing = false
        return
    end
    
    -- –ò–º–∏—Ç–∞—Ü–∏—è –æ–±—Ä–∞–±–æ—Ç–∫–∏
    if DEBUG_MODE then
        print("üîÑ –û–±—Ä–∞–±–æ—Ç–∫–∞ Job ID:", jobId)
    end
    
    -- –ó–∞–¥–µ—Ä–∂–∫–∞ –¥–ª—è –∏–º–∏—Ç–∞—Ü–∏–∏ –æ–±—Ä–∞–±–æ—Ç–∫–∏
    delay(1.5, function()
        ShowNotification("‚úÖ –£—Å–ø–µ—Ö! Job ID –ø—Ä–∏–Ω—è—Ç: " .. jobId, true)
        
        -- –ó–¥–µ—Å—å –≤–∞—à–∞ –ª–æ–≥–∏–∫–∞ –æ–±—Ä–∞–±–æ—Ç–∫–∏ Job ID
        -- –ù–∞–ø—Ä–∏–º–µ—Ä: —Ç–µ–ª–µ–ø–æ—Ä—Ç–∞—Ü–∏—è, —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ, –æ—Ç–ø—Ä–∞–≤–∫–∞ –Ω–∞ —Å–µ—Ä–≤–µ—Ä –∏ —Ç.–¥.
        
        if DEBUG_MODE then
            print("üéØ Job ID –æ–±—Ä–∞–±–æ—Ç–∞–Ω:", jobId)
        end
        
        -- –ü—Ä–∏–º–µ—Ä –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è:
        -- game:GetService("TeleportService"):TeleportToPlaceInstance(game.PlaceId, jobId, Player)
        
        HideLoading()
        isProcessing = false
        
        -- –ê–≤—Ç–æ–∑–∞–∫—Ä—ã—Ç–∏–µ –º–µ–Ω—é —á–µ—Ä–µ–∑ 2 —Å–µ–∫—É–Ω–¥—ã –ø–æ—Å–ª–µ —É—Å–ø–µ—Ö–∞
        delay(2, function()
            if isMenuOpen then
                CloseMenu()
            end
        end)
    end)
end

-- –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
CloseButton.MouseButton1Click:Connect(CloseMenu)

SubmitButton.MouseButton1Click:Connect(function()
    ProcessJobID(TextBox.Text)
end)

-- –û—Ç–ø—Ä–∞–≤–∫–∞ –ø–æ Enter
TextBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        ProcessJobID(TextBox.Text)
    end
end)

-- –û–±—Ä–∞–±–æ—Ç–∫–∞ –±–∏–Ω–¥–∞
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    
    if input.KeyCode == OPEN_BIND then
        if isMenuOpen then
            CloseMenu()
        else
            OpenMenu()
        end
    end
    
    -- –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ ESC
    if input.KeyCode == Enum.KeyCode.Escape and isMenuOpen then
        CloseMenu()
    end
end)

-- –ó–∞–∫—Ä—ã—Ç–∏–µ –ø—Ä–∏ –∫–ª–∏–∫–µ –≤–Ω–µ –º–µ–Ω—é
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    
    if input.UserInputType == Enum.UserInputType.MouseButton1 and isMenuOpen then
        local mousePos = UserInputService:GetMouseLocation()
        local absPos = MainFrame.AbsolutePosition
        local absSize = MainFrame.AbsoluteSize
        
        -- –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–ª–∏–∫–∞ –≤–Ω–µ –º–µ–Ω—é
        if mousePos.X < absPos.X or mousePos.X > absPos.X + absSize.X or
           mousePos.Y < absPos.Y or mousePos.Y > absPos.Y + absSize.Y then
            CloseMenu()
        end
    end
end)

-- –ì–ª–æ–±–∞–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ –¥–ª—è –≤—ã–∑–æ–≤–∞ –∏–∑ –¥—Ä—É–≥–∏—Ö —Å–∫—Ä–∏–ø—Ç–æ–≤
_G.OpenJobIDMenu = OpenMenu
_G.CloseJobIDMenu = CloseMenu
_G.SubmitJobID = ProcessJobID

-- –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –≤ –∫–æ–Ω—Å–æ–ª—å
print("üéØ Job ID Menu by Bind –∑–∞–≥—Ä—É–∂–µ–Ω!")
print("üìã –ë–∏–Ω–¥: " .. OPEN_BIND.Name)
print("üîß –†–µ–∂–∏–º –æ—Ç–ª–∞–¥–∫–∏: " .. tostring(DEBUG_MODE))
print("üí° –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ: _G.OpenJobIDMenu() –¥–ª—è –æ—Ç–∫—Ä—ã—Ç–∏—è –º–µ–Ω—é")

-- –ê–≤—Ç–æ–æ—á–∏—Å—Ç–∫–∞ –ø—Ä–∏ –≤—ã—Ö–æ–¥–µ
Player.AncestryChanged:Connect(function()
    if not Player.Parent then
        if ScreenGui then
            ScreenGui:Destroy()
        end
    end
end)
