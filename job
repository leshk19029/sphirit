-- –ò–Ω–¥–∏–∫–∞—Ç–æ—Ä –±–∏–Ω–¥–∞ –≤ —É–≥–ª—É —ç–∫—Ä–∞–Ω–∞
local BindIndicator = Instance.new("TextLabel")
BindIndicator.Name = "BindIndicator"
BindIndicator.Size = UDim2.new(0, 200, 0, 30)
BindIndicator.Position = UDim2.new(1, -210, 1, -40)
BindIndicator.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
BindIndicator.BackgroundTransparency = 0.8
BindIndicator.Text = "Job Menu: " .. OPEN_BIND.Name
BindIndicator.TextColor3 = Color3.fromRGB(200, 200, 200)
BindIndicator.TextSize = 12
